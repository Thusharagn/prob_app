<%= form_for @user do | f | %>


    <table>
<tr>
  <td><%= f.label :name%></td>
  <td><%= f.text_field :name%></td>
</tr>
<tr>
  <td><%= f.label :email%></td>
  <td><%= f.email_field :email%></td>
</tr>
<tr>
  <td><%= f.label :password%></td>
  <td><%= f.password_field :password%></td>
</tr>
<tr>
  <td><%= f.label :confirm_password%></td>
  <td><%= f.text_field :confirm_password%></td>
</tr>
<tr>
  <td><%= f.submit "Sign Up"%></td>
</tr>
       <tr>
    <td><%=link_to "Back", users_path %></td>
  </tr>
</table>
<%end%>
